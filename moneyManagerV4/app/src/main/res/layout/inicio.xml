<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ingresos Total:"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtIngresosTotal"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gastos General:"
        android:id="@+id/textView10"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtGastosGeneral"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categorias"
        android:id="@+id/textView12"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Comida"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Regalo"
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtComida"
        android:layout_below="@+id/imgComida"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Transporte"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignEnd="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtRegalo"
        android:layout_below="@+id/imgRegalo"
        android:layout_alignStart="@+id/imgRegalo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtTransporte"
        android:layout_alignTop="@+id/txtRegalo"
        android:layout_alignStart="@+id/imgTransporte"
        android:paddingLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Salud"
        android:id="@+id/textView19"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/txtComida"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtSalud"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgComida"
        android:layout_below="@+id/textView13"
        android:layout_alignEnd="@+id/textView19"
        android:paddingLeft="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgRegalo"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgTransporte"
        android:layout_above="@+id/txtTransporte"
        android:layout_alignStart="@+id/textView15"
        android:paddingLeft="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgSalud"
        android:layout_below="@+id/textView19"
        android:layout_alignEnd="@+id/textView19"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Educacion"
        android:id="@+id/textView21"
        android:layout_above="@+id/imgEducacion"
        android:layout_toEndOf="@+id/imgSalud" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Entretenimiento"
        android:id="@+id/textView22"
        android:layout_alignTop="@+id/textView21"
        android:layout_toEndOf="@+id/imgRegalo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgEducacion"
        android:layout_above="@+id/txtEducacion"
        android:layout_toEndOf="@+id/textView13" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgEntretenimiento"
        android:layout_above="@+id/txtEntretenimiento"
        android:layout_alignStart="@+id/txtTransporte" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtEducacion"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imgEducacion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtEntretenimiento"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imgEntretenimiento" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ropa"
        android:id="@+id/textView25"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignStart="@+id/txtRegalo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgRopa"
        android:layout_above="@+id/txtRopa"
        android:layout_alignEnd="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtRopa"
        android:layout_alignTop="@+id/txtSalud"
        android:layout_alignStart="@+id/imgRopa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Otros"
        android:id="@+id/textView27"
        android:paddingLeft="16dp"
        android:layout_alignTop="@+id/textView25"
        android:layout_alignStart="@+id/imgOtros" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgOtros"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/imgRopa"
        android:layout_toEndOf="@+id/txtGastosGeneral" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtOtros"
        android:layout_below="@+id/imgOtros"
        android:layout_alignStart="@+id/imgOtros"
        android:paddingLeft="16dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrar Gastos e Ingresos"
        android:id="@+id/btnBorrar"
        android:layout_below="@+id/textView10"
        android:layout_alignEnd="@+id/txtTransporte" />

</RelativeLayout>