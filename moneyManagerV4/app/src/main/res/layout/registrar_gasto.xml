<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cantidad:"
        android:id="@+id/textView4"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categoria:"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/btn_dropdown"
        android:layout_alignEnd="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Gasto"
        android:id="@+id/btnRegistrarGasto"
        android:layout_below="@+id/btn_dropdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_dropdown"
        android:layout_marginTop="81dp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/txtCantidadGasto"
        android:layout_toEndOf="@+id/textView5"
        android:layout_alignStart="@+id/txtCantidadGasto"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtCantidadGasto"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />
</RelativeLayout>